{
  "name": "sso-api",
  "version": "1.0.0",
  "author": {
    "name": "Murat Demirci",
    "url": "https://github.com/muratdemirci"
  },
  "description": "This project is a Single Sign-On (SSO) REST API with Multi-Tenancy, constructed using Node.js and TypeScript",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "prebuild": "rimraf dist/",
    "build": "tsc",
    "watch-ts": "tsc -w",
    "start-ts": "node dist/index.js",
    "start": "npm run build && npm run start-ts",
    "dev": "nodemon",
    "create": "typeorm migration:create ./src/migrations/testMigration",
    "migration:generate": "ts-node ./node_modules/typeorm/cli.js migration:generate ./src/migrations/$npm_config_name",
    "migration:create": "ts-node ./node_modules/typeorm/cli.js migration:create ./src/migrations/$npm_config_name",
    "migration:run": "ts-node ./node_modules/typeorm/cli.js migration:run -d src/configs/database.config.ts",
    "migration:revert": "ts-node ./node_modules/typeorm/cli.js migration:revert -d src/configs/database.config.ts"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2"
  },
  "dependencies": {
    "@babel/core": "^7.12.10",
    "@grpc/grpc-js": "^1.10.3",
    "@grpc/proto-loader": "^0.7.10",
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.9",
    "@types/morgan": "^1.9.2",
    "@types/uuid": "^8.3.1",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.16.4",
    "http-status-codes": "^1.3.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.1",
    "morgan": "^1.9.1",
    "nodemon": "^2.0.6",
    "pg": "^8.11.3",
    "prettier": "^2.2.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.2",
    "tslint": "^5.20.1",
    "tslint-config-airbnb": "^5.11.2",
    "typeorm": "^0.3.20",
    "typescript": "^4.1.3",
    "uuid": "^8.3.2",
    "winston": "^3.2.1",
    "zod": "^3.22.4"
  }
}
